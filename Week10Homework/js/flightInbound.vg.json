{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Inbound and Outbound Flights",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week9Homework/data/International%20-%20Copy.csv"
  },
  "params": [
    {
      "name": "Year_Selected",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2022,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year_Selected"},
    {
      "calculate": "datum.In_Out == 'I' ? 'Inbound' : 'Outbound'",
      "as": "Flight_Type"
    },
    {"calculate": "abs(datum.All_Flights)", "as": "Abs_Flights"},
    {
      "calculate": "datum.In_Out == 'I' ? datum.All_Flights : -datum.All_Flights",
      "as": "Final_Flights"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Australian_City",
      "type": "nominal",
      "title": "Australian City",
      "sort": {"field": "Abs_Flights", "order": "descending"}
    },
    "y": {
      "aggregate": "sum",
      "field": "Final_Flights",
      "type": "quantitative",
      "title": "Total Flights"
    },
    "color": {
      "field": "Flight_Type",
      "type": "nominal",
      "scale": {"range": ["blue", "red"]}
    }
  }
}