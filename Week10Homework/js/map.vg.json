{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian International Flights Count (Year 2022)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {"calculate": "'No Flight inbound / outbound'", "as": "tooltip"}
      ],
      "mark": {"type": "geoshape", "fill": "#F0F0F0", "stroke": "darkgray"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "tooltip",
            "type": "nominal",
            "title": "Total Flights to / from"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/js/ocean.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "deepskyblue", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/data/International.csv"
            },
            "key": "Service_Country",
            "fields": ["Total_Flights"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Total_Flights",
          "type": "quantitative",
          "scale": {"type": "linear"},
          "title": "Total Flights"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Total_Flights",
            "type": "quantitative",
            "title": "Total Flights to / from"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/data/uniqueInternationalCity2022.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "FROM_LONGITUDE", "type": "quantitative"},
        "latitude": {"field": "FROM_LATITUDE", "type": "quantitative"},
        "size": {"value": 80},
        "color": {"value": "blue"},
        "tooltip": [
          {"field": "Australian_City", "type": "nominal", "title": "Country"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/data/uniqueInternationalCity2022.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "TO_LONGITUDE", "type": "quantitative"},
        "latitude": {"field": "TO_LATITUDE", "type": "quantitative"},
        "size": {"value": 80},
        "color": {"value": "red"},
        "tooltip": [
          {"field": "International_City", "type": "nominal", "title": "Country"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/data/uniqueInternationalCity2022.csv"
      },
      "mark": "rule",
      "encoding": {
        "longitude": {
          "field": "FROM_LONGITUDE",
          "type": "quantitative"
        },
        "latitude": {
          "field": "FROM_LATITUDE",
          "type": "quantitative"
        },
        "longitude2": {
          "field": "TO_LONGITUDE",
          "type": "quantitative"
        },
        "latitude2": {
          "field": "TO_LATITUDE",
          "type": "quantitative"
        },
        "color": {"value": "yellow"}
      }

    }
  ]
}